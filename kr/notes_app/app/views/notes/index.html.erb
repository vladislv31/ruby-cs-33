<p id="notice"><%= notice %></p>

<h1>Нотатки</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= link_to 'Показати', note %></td>
        <td><%= link_to 'Редагувати', edit_note_path(note) %></td>
        <td><%= link_to 'Видалити', note, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Створити', new_note_path %>