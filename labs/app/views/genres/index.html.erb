<h1>Genres</h1>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Book</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to genre.book.title, book_path(genre.book) %></td>
      <td><%= link_to 'Show', genre %></td>
      <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
      <td><%= link_to 'Destroy', genre_path(genre), method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<br>
<%= paginate @genres %>
<br><br>
<%= link_to "Export PDF", export_pdf_genre_path, class: "btn btn-primary" %>
<br><br>
<%= link_to 'New Genre', new_genre_path, class: "btn btn-primary" %>