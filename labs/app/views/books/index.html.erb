<h1>Books</h1>
<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Library</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.year %></td>
      <td><%= book.library.name %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<br>
<%= paginate @books %>
<br><br>
<%= link_to "Export PDF", export_pdf_book_path, class: "btn btn-primary" %>
<br><br>
<%= link_to 'New Book', new_book_path, class: "btn btn-primary" %>