<h1><%= @book.title %></h1>

<p><strong>Year:</strong> <%= @book.year %></p>

<p><strong>Library:</strong> <%= link_to @book.library.name, @book.library %></p>

<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-primary" %>
<%= link_to 'Back', books_path, class: "btn btn-secondary" %>
<%= link_to 'Delete', destroy_book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

